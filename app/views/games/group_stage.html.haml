%h1.title Group Stage
= render 'games/group_stage_tabs'
- if @games.any?
  %form#bets-form{method: :post, action: '/bets'}
    %table.table.is-full-width
      = hidden_field_tag :authenticity_token, form_authenticity_token
      - @games.each do |game|
        = render partial: 'games/round', locals: {game: game, deadline: @active_deadline}
    .s40
    - if @active_deadline
      %button.button.is-link.is-full-width.submit-button{type: :submit} Submit
