%h1.title Group Stage
= render 'games/group_stage_tabs'
= render '/messages'
- if @games.any?
  %form{method: :post, action: '/bets'}
    %table.table.is-full-width
      %tbody.tbody
        = hidden_field_tag :authenticity_token, form_authenticity_token
        - for game in @games
          = render partial: 'games/bet_form', locals: {game: game, bet: @bets.where(game: game).take}
      
    %button.button.is-link.is-full-width{type: :submit} Submit