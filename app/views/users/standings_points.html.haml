%h1.title Bets
= render 'users/table_tabs'
.s10
%table.table.is-full-width.word-wrap
	%thead
		%th.text-centered #
		%th Name
		%th.text-centered Points
		%th.text-centered Bingo
		%th.text-centered Donkey
	%tbody
		- for rank in @ranking
			- for user in rank.rankables
				%tr
					%td.text-centered= rank.rank
					%td= user.name
					- if bopdial_started?
						%td.text-centered= user.points
						%td.text-centered= user.bingo
						%td.text-centered= user.donkey
					- else
						%td
						%td
						%td


