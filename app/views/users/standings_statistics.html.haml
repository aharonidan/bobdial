%h1.title Standings
= render 'users/table_tabs'
- if current_account.stats.empty? or (not Game.first.played?)
	.s20
	%p.left-margin Coming Soon!
- else
	- @charts_data.each_with_index do |chart, index|
		= column_chart(chart)
		%table.table
			%tbody
				- @groups_data[index].each do |category, users|
					- users = users + users
					%tr.no-border-bottom
						%td
							%label.label= category
						%td
							= users.join(', ')
