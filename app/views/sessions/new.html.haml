/ .columns
.center
  .s50
  %h1.title
    Bopdial
  %h2.subtitle
    Log in
  
  = render '/messages'

  = form_for(:session, url: login_path) do |f|
    .field
      = f.label :email
      .control
        = f.email_field :email, class: 'input'

    .field
      = f.label :password
      .control
        = f.password_field :password, class: 'input'

    = f.submit "Log in", class: "button is-link"
  
  .s20
  %p
    New user? #{link_to "Sign up now!", signup_path}